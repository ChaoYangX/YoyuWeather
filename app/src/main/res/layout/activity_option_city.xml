<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.yuyouweather.OptionCity.view.OptionCityActivity">
    <ImageView
        android:id="@+id/bing_pic_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/frag_linear"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:background="#00000000">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/title_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textColor="#fff"
            />
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#0000"
        app:layout_constraintTop_toBottomOf="@+id/frag_linear"
        >
    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3300"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        >
    </View>
    <FrameLayout
        android:id="@+id/search_city_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.920"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        ></FrameLayout>
    <TextView
        android:id="@+id/visibility_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="正在加载..."
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>